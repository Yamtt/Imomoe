<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_circle_corner_bottom_dialog_12"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="13dp"
    android:paddingEnd="13dp">

    <com.google.android.material.textview.MaterialTextView
        style="@style/TextAppearance.Material3.TitleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="17dp"
        android:gravity="center"
        android:text="@string/share_to"
        android:textColor="?attr/colorOnSurface" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_to_qq"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:text="@string/qq"
            android:textColor="?attr/colorOnSurface"
            app:drawableTint="?attr/colorOnSurface"
            app:drawableTopCompat="@drawable/ic_qq_34" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_to_wechat"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:text="@string/wechat"
            android:textColor="?attr/colorOnSurface"
            app:drawableTint="?attr/colorOnSurface"
            app:drawableTopCompat="@drawable/ic_wechat_34" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_to_weibo"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:text="@string/weibo"
            android:textColor="?attr/colorOnSurface"
            app:drawableTint="?attr/colorOnSurface"
            app:drawableTopCompat="@drawable/ic_weibo_34" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_copy_link"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:text="@string/copy_url"
            android:textColor="?attr/colorOnSurface"
            app:drawableTint="?attr/colorOnSurface"
            app:drawableTopCompat="@drawable/ic_link_34" />

    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_cancel_share"
        style="@style/TextAppearance.Material3.TitleMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="17dp"
        android:text="@string/cancel"
        android:textColor="?attr/colorOnSurface" />
</LinearLayout>