<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Purple" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorOnPrimary">@color/on_primary_purple</item>
        <item name="colorPrimaryInverse">@color/primary_inverse_purple</item>
        <item name="colorPrimaryContainer">@color/primary_container_purple</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container_purple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_purple</item>
        <item name="colorOnSecondary">@color/on_secondary_purple</item>
        <item name="colorSecondaryContainer">@color/secondary_container_purple</item>
        <!-- navigationIcon选中的颜色 -->
        <item name="colorOnSecondaryContainer">@color/on_secondary_container_purple</item>
        <item name="colorTertiary">@color/tertiary_purple</item>
        <item name="colorOnTertiary">@color/on_tertiary_purple</item>
        <item name="colorTertiaryContainer">@color/tertiary_container_purple</item>
        <item name="colorOnTertiaryContainer">@color/on_tertiary_container_purple</item>
        <!-- TopBar、NavigationBar底色 -->
        <item name="colorSurface">@color/surface_purple</item>
        <!-- navigationIcon颜色 -->
        <item name="colorOnSurface">@color/on_surface_purple</item>
        <item name="colorSurfaceVariant">@color/surface_variant_purple</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_purple</item>
        <item name="colorSurfaceInverse">@color/inverse_surface_purple</item>
        <item name="colorOnSurfaceInverse">@color/inverse_on_surface_purple</item>
        <!-- 窗体背景颜色 -->
        <item name="background">@color/background_purple</item>
        <item name="colorOnBackground">@color/on_background_purple</item>
        <item name="colorError">@color/error_purple</item>
        <item name="colorOnError">@color/on_error_purple</item>
        <item name="colorErrorContainer">@color/error_container_purple</item>
        <item name="colorOnErrorContainer">@color/on_error_container_purple</item>
        <item name="colorOutline">@color/outline_purple</item>

        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">
            shortEdges
        </item>
    </style>

    <style name="Theme.Anime.Purple" parent="Theme.Purple">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>
</resources>